            <tx:method name="*" propagation="NOT_SUPPORTED" isolation="DEFAULT" />
        </tx:attributes>
    </tx:advice>
    
    <aop:config>
        <aop:pointcut id="allServices" expression="execution(* br.com.cds.presenter.businnes.*.*.*(..))" />
        <aop:advisor pointcut-ref="allServices"   advice-ref="txAdvice" />
    </aop:config>
    -->

</beans>
